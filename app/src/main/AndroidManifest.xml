<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.logicslab.fcvappicha">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplachScreen"
            android:theme="@style/AppTheme2"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppTheme2"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".TeamActivity"
            android:label="@string/team"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FixtureAcitivity"
            android:label="@string/fixture"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MactchesActivity"
            android:label="@string/matches"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PlayersActivity"
            android:label="@string/players"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ScoreboardActivity"
            android:label="@string/scoreboard"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AboutActivity"
            android:label="@string/about"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"/>

        <service android:name=".Service.MyFirebaseInstanceService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <meta-data android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_flag" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
    </application>

</manifest>