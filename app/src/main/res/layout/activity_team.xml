<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/clTeam"
    android:layout_height="match_parent"
    tools:context=".TeamActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:paddingBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/team_name"
                android:textSize="27sp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:fontFamily="serif"
                android:textColor="@color/teamText"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="2dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:background="@color/lineSeparator"/>

            <TextView
                android:id="@+id/tvTeamWiki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"
                android:textSize="18sp"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/teamText"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textStyle="normal"
                android:lineSpacingExtra="2dp"
                android:text="@string/str_teamwiki"/>

            <RelativeLayout
                android:background="@drawable/team_info_bg"
                android:layout_alignParentTop="true"
                android:layout_marginTop="250dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/team_name"
                    android:textColor="@color/pureBlack"
                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="6dp"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/log"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="270dp"
                    android:background="@color/infoBoxBorder" />
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="275dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/fullName"
                        android:padding="4dp"
                        android:textColor="@color/pureBlack"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/teamFullName"
                        android:padding="4dp"
                        android:textColor="@color/pureBlack"
                        android:textSize="16sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="310dp"
                    android:background="@color/infoBoxBorder" />

                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="315dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/shortName"
                        android:padding="4dp"
                        android:textColor="@color/pureBlack"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/teamAbbreviation"
                        android:padding="4dp"
                        android:textColor="@color/pureBlack"
                        android:textSize="16sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="350dp"
                    android:background="@color/infoBoxBorder" />

                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="355dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/league"
                        android:padding="4dp"
                        android:textColor="@color/pureBlack"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/leagueName"
                        android:padding="4dp"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/pureBlack"
                        android:textSize="16sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="390dp"
                    android:background="@color/infoBoxBorder" />

                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="395dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/founded"
                        android:padding="4dp"
                        android:textColor="@color/pureBlack"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/dateFound"
                        android:padding="4dp"
                        android:lineSpacingExtra="3dp"
                        android:textColor="@color/pureBlack"
                        android:textSize="16sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="430dp"
                    android:background="@color/infoBoxBorder" />

                <LinearLayout
                    android:id="@+id/llInsta"
                    android:gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="435dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_insta"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/ourinsta"
                        android:padding="4dp"
                        android:textColor="@color/pureBlack"
                        android:textSize="18sp"/>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>